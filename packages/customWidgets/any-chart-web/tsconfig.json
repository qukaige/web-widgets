{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "dist/tsc/",
        "noEmitOnError": true,
        "sourceMap": true,
        "module": "amd",
        "target": "es5",
        "lib": ["es2015", "dom"],
        "types": ["mendix-client", "node"],
        "moduleResolution": "node",
        "declaration": false,
        "removeComments": true,
        "noLib": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "strictFunctionTypes": false,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src", "./typings"],
    "exclude": ["dist/", "node_modules/", "tests/", "scripts/", "**/__tests__/**"]
}
