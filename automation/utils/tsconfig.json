{
    "include": ["./src", "./bin"],
    "compilerOptions": {
        "lib": ["ES2021"],
        "module": "CommonJS",
        "target": "ES2021",
        "types": ["node"],
        "outDir": "./dist",
        "strict": true,
        "noEmit": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "declaration": true
    }
}
